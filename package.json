{
   "name": "adapter-demo",
   "version": "0.1.0",
   "private": true,
   "homepage": "http://pan-dev-portal.eli-laser.eu/",
   "dependencies": {
      "@testing-library/jest-dom": "^5.11.4",
      "@testing-library/react": "^11.1.0",
      "@testing-library/user-event": "^12.1.10",
      "normalize.css": "^8.0.1",
      "rc-slider": "^9.7.2",
      "react": "^17.0.2",
      "react-dom": "^17.0.2",
      "react-json-view": "^1.21.3",
      "react-scripts": "4.0.3",
      "search-api-adapter": "https://github.com/panosc-portal/search-api-adapter.git",
      "web-vitals": "^1.0.1",
      "zustand": "^3.5.4"
   },
   "devDependencies": {
      "@babel/core": "^7.13.15",
      "@babel/preset-env": "^7.13.15",
      "eslint": "^7.24.0",
      "eslint-config-prettier": "^8.3.0",
      "eslint-plugin-import": "^2.23.4",
      "eslint-plugin-prettier": "^3.3.1",
      "eslint-plugin-react-hooks": "^4.2.0",
      "prettier": "^2.2.1"
   },
   "prettier": {
      "trailingComma": "all",
      "tabWidth": 2,
      "semi": false,
      "singleQuote": true,
      "bracketSpacing": false,
      "arrowParens": "always"
   },
   "eslintConfig": {
      "parserOptions": {
         "parser": "babel-eslint",
         "sourceType": "module"
      },
      "env": {
         "es2021": true
      },
      "extends": [
         "prettier",
         "react-app"
      ],
      "plugins": [
         "prettier",
         "import"
      ],
      "rules": {
         "prettier/prettier": [
            "error"
         ],
         "react-hooks/rules-of-hooks": "error",
         "react-hooks/exhaustive-deps": "warn",
         "import/order": [
            "error",
            {
               "groups": [
                  "builtin",
                  "external",
                  "internal"
               ],
               "pathGroups": [
                  {
                     "pattern": "~/**",
                     "group": "external",
                     "position": "before"
                  }
               ],
               "newlines-between": "always",
               "alphabetize": {
                  "order": "asc",
                  "caseInsensitive": true
               }
            }
         ]
      }
   },
   "scripts": {
      "start": "react-scripts start",
      "build": "react-scripts build",
      "test": "react-scripts test",
      "eject": "react-scripts eject"
   },
   "browserslist": {
      "production": [
         ">0.2%",
         "not dead",
         "not op_mini all"
      ],
      "development": [
         "last 1 chrome version",
         "last 1 firefox version",
         "last 1 safari version"
      ]
   }
}
